	<header class="intro-header" style="background-image: url(https://images.unsplash.com/photo-1492057201103-01c5991d4596?ixlib=rb-0.3.5&s=9b5e92f58ec920c4946edc083e2cd0df&auto=format&fit=crop&w=755&q=80);>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <div class="site-heading">
            <h1>Memoirs</h1>
            <hr class="small">
						<p class="subheading">Learn from experiences</p>
						<p>
							<a class"btn btn-primary btn-lg" href="/memoirs/new">Add New Memoir</a>
						</p>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
		<div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			<% memoirs.forEach(function(memoir) { %>
        <div class="post-preview">
          <a href="/memoirs/<%= memoir._id %>">
            <h2 class="post-title">
              <%= memoir.name %>
            </h2>
            <h3 class="post-subtitle">
              <%= memoir.description.substr(0,150) %>
            </h3>
          </a>
          <p class="post-meta">Posted by <a href="#"><%= memoir.author.username %></a> <%= moment(memoir.createdAt).fromNow() %></p>
      </div>
      <hr>
			<% }); %>
		</div>
<% include ../partials/footer %>