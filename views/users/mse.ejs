                      <option>Private Employee</option>
                      <option>Govt. Employee</option>
                      <option>Businessman</option>
                      <option>Farmer</option>
                      <option>Other</option>
                    </select>
                </div>
              </div>
              <!-- Mother Details end -->
              <!-- Sibling Details -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="sibling">Siblings</label>
                <div class="col-md-4">
                  <select class="form-control" id="sibling" name="sibling[details]">
                    <option>Elder Sibling</option>
                    <option>Younger Sibling</option>
                    <option>Both</option>
                    <option>Twin</option>
                    <option>Single Child</option>
