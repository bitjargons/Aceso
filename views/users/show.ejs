<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
		<p> <%= user.details.firstName + ' ' + user.details.lastName  %> </p>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto:"<%= user.email %>"><%= user.email %></a></div>
			<%= user.details.description %>
		</div>
	</div>
	<div class="col-md-8">	
		<h3><%= user.details.firstName %>'s Memoirs</h3>
		<ul>
			<% memoirs.forEach(function(memoir) { %>
				<li><a href="/memoirs/<%= memoir.id %>"><%= memoir.name %></a></li>
			<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>