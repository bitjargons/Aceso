<% include ../partials/formheader %>

<div class="row">
	<div class="col-md-12">
		<form action="/users/<%= user._id %>/verify" method="POST">
			<legend>Verify Email</legend>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email" autofocus class="form-control" placeholder="<%= user.email %>">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary" value="Verify">
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>