<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit <%= disorder.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/disorders/<%= disorder._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="disorder[name]" value="<%= disorder.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="disorder[image]" value="<%= disorder.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="disorder[description]" value="<%= disorder.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/disorders">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>