<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit <%= post.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/dashboard/posts/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="post[symptom]" value="<%= post.symptom %>">
            </div>
            <!-- <div class="form-group">
                <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
            </div> -->
            <div class="form-group">
                <input class="form-control" type="text" name="post[description]" value="<%= post.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/posts">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>