<% include ../partials/adminheader %>
    <div class="view">
      <div class="viewHeader">
        <div class="title">Manage Disorders</div>
        <div class="functions">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#disorder"><span class="glyphicon glyphicon-plus"></span>Add Disorder</button>
        </div>
      </div>
      <div class="content">
        <div class="list">
          <div class="title">Disorders</div>
          <ul>
            <% disorders.forEach(function(disorder) { %>
              <li>
                <span>
                  <b><%= disorder.name %></b>
                  <u> <%= disorder.posts.length %> Posts </u>
                </span>
              	<div class="info">
                	<a href="/dashboard/disorders/edit/<%= disorder._id %>" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                	<form action ="/dashboard/disorders/<%= disorder._id %>?_method=DELETE" method="POST" class="form-inline">
										<button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>
									</button>
									</form>
              	</div>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
    <div id="disorder" class="modal fade" role="dialog">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Disorders</h4>
          </div>
          <div class="modal-body">
            <p>How many disorders(in numbers) do you wanna?</p>
            <form action="/dashboard/disorders/new" method="post">
            	<input type="number" name="memno" class="form-control">
            	<br>
            	<button class="form-control btn btn-info">Let's Add</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
<% include ../partials/adminFooter %>