<% include ../partials/adminheader %>
	<div class="view">
    <div class="viewHeader">
      <div class="title">Add Posts</div>
			<form action="/dashboard/posts" method="post">
				<table class="table">
					<tr>
						<th>S. No</th>
						<th>Post</th>
						<th>Category</th>
						<th>Content</th>
					</tr>
					<% for(var i = 0; i < fields; i++) { %>
						<tr>
							<td class="">
								<%= i+1 %>
							</td>
							<td class="">
								<input type="text" class="form-control" name="posts[name][]">
							</td>
							<td class="">
								<select class="form-control" name="posts[parent][]">
									<% disorders.forEach(function(disorder) { %>
										<option value="<%= disorder._id %>"> <%= disorder.name %></option>
									<% }) %>
								</select>
							</td>
							<td class="">
								<input type="text" class="form-control" name="posts[desc][]">
							</td>
						</tr>
					<% } %>
				</table>
				<button class="btn btn-success">Add these Disorders</button>
			</form>
		</div>
	</div>
<% include ../partials/adminfooter %>