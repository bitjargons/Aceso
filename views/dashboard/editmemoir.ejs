<% include ../partials/adminheader %>
  <div class="view">
    <div class="viewHeader">
      <div class="title">Edit Memoirs</div>
        <form action="/dashboard/memoirs/<%= memoir._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="memoir[name]" value="<%= memoir.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="memoir[description]" value="<%= memoir.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
    </div>
  </div>
<% include ../partials/adminfooter %>